---
const { title } = Astro.props;
---

<section
  class="rounded-lg overflow-hidden shadow-sm shadow-custom2-1"
  id={title}
>
  <div class="bg-gray-700 px-2">
    <h2 class="text-md font-bold uppercase font-mono text-custom2">{title}</h2>
  </div>

  <div class="p-2">
    <slot />
  </div>
</section>
